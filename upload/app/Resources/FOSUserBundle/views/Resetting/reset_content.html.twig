{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row">
        <div class="span12">
            <h2>Nouveau mot de passe <i class="icon-key"></i></h2>
			<div class="span4 bords">
				<h4>Récupération du mot de passe ?</h4>
				<em>
					Compléter le formulaire, votre mot de passe sera alors réinitialiser.<br /><br />
					Une fois validé, vous devrez utiliser le nouveau mot de passe que vous avez défini.
				</em>
			</div>
			<div class="liens span4 offset2 bords">
				<h4>Indiquer votre nouveau mot de passe</h4>
				{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    				{{ form_widget(form) }}
					<br/>
					<div class="wrapper">
						<div class="parent">
							<input type="submit" class="bouton children" value="{{ 'resetting.reset.submit'|trans }}" />
						</div>   
        			</div>
				{{ form_end(form) }}
			</div>   
        </div>
    </div>
</div>